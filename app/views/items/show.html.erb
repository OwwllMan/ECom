<p id="notice">
    <%= notice %>
</p>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1 class="my-4">Shop Name</h1>
                <div class="list-group">
                    <%= link_to "All Items", '/items', class:'list-group-item' %>
                    <a href="#" class="list-group-item">Category 2</a>
                    <a href="#" class="list-group-item">Category 3</a>
                </div>
            </div>
            <!-- /.col-lg-3 -->
            <div class="col-lg-9">
                <div class="card mt-4">
                    <img class="card-img-top img-fluid" src=<%= @item.image %> alt="">
                    <div class="card-body">
                        <h3 class="card-title"><%= @item.title %></h3>
                        <h4><%= @item.price %></h4>
                        <p class="card-text">
                            <%= @item.description %>
                            <% if current_user %>
                            <div>
                            <%= form_for @item, :url => cart_path, authenticity_token: true do |f| %>
                            <%= f.hidden_field :item_id, value: @item.id %>
                            <%= f.hidden_field :authenticity_token, form_authenticity_token %>
                            <%= button_to "Commander", carts_url %>
                            <% end %>
                            </div>
                            <% end %>
                        </p>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-lg-9 -->
        </div>
    </div>
    <!-- /.container -->
    <br>
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</html>
<%= link_to 'Edit', edit_item_path(@item) %> |
