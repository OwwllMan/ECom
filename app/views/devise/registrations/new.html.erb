<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="card text-white bg-dark mb-3 card-user">
  <div class="card-header">
    <h2>Sign up</h2>
  <div class="field-user">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-group-text card-user"  %>
  </div>

  <div class="field-user">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"input-group-text card-user" %>
  </div>

  <div class="field-user">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-group-text card-user"  %>
  </div>

  <div class="actions field-user">
    <%= f.submit "Sign up", class:"btn btn-light" %>
  <br>
  </div>
</div>
<% end %>
<a class="field-user" href=".././users/sign_in"><button type="button" class="btn btn-light">Login</button></a>
<br>